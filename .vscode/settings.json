{
  "sonarlint.ls.javaHome": "/Library/Java/JavaVirtualMachines/jdk-17.jdk/Contents/Home",
  "sonarlint.connectedMode.servers": [
    {
      "connectionId": "sonarqube-local",
      "serverUrl": "http://localhost:9000",
      "token": "${SONARQUBE_TOKEN}"
    }
  ],
  "sonarlint.connectedMode.projects": {
    "sonarqube-local": [
      {
        "projectKey": "buy-01-backend",
        "baseDirUri": "file://${workspaceFolder}/backend"
      },
      {
        "projectKey": "buy-01-frontend",
        "baseDirUri": "file://${workspaceFolder}/frontend"
      }
    ]
  },
  "sonarlint.showDescriptionInHovers": true,
  "sonarlint.showAnalysisProgress": true,
  "editor.formatOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "[java]": {
    "editor.defaultFormatter": "redhat.java",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.formatOnSave": true
  },
  "java.compile.nullAnalysis.mode": "automatic"
}