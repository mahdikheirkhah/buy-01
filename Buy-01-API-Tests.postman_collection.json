  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Client Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"client@test.com\",\n  \"password\": \"Client@123\",\n  \"name\": \"Test Client\",\n  \"role\": \"CLIENT\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/auth/signup",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "auth", "signup"]
            },
            "description": "Register as client\nExpected: 201 Created"
          },
          "response": []
        },
        {
          "name": "Seller Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"seller@test.com\",\n  \"password\": \"Seller@123\",\n  \"name\": \"Test Seller\",\n  \"role\": \"SELLER\",\n  \"shop_name\": \"Test Shop\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/auth/signup",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "auth", "signup"]
            },
            "description": "Register as seller\nExpected: 201 Created"
          },
          "response": []
        },
        {
          "name": "Client Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"client@test.com\",\n  \"password\": \"Client@123\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "auth", "login"]
            },
            "description": "Login as client\nExpected: 200 OK\nResponse includes: token, user_id, role"
          },
          "response": []
        },
        {
          "name": "Duplicate Email (Should Fail)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"client@test.com\",\n  \"password\": \"Another@123\",\n  \"name\": \"Another User\",\n  \"role\": \"CLIENT\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/auth/signup",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "auth", "signup"]
            },
            "description": "Try registering with existing email\nExpected: 409 Conflict\nMessage: \"Email already registered\""
          },
          "response": []
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Create Product (Seller Only)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{seller_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Product\",\n  \"description\": \"Test product description\",\n  \"price\": 99.99,\n  \"category\": \"Electronics\",\n  \"stock\": 50\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/products",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "products"]
            },
            "description": "Create product (seller only)\nNote: Replace {{seller_token}} with actual seller JWT token\nExpected: 201 Created"
          },
          "response": []
        },
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/products",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "products"]
            },
            "description": "Get all products\nExpected: 200 OK\nResponse: Array of products"
          },
          "response": []
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/products/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "products", "1"]
            },
            "description": "Get specific product\nNote: Replace 1 with actual product ID\nExpected: 200 OK"
          },
          "response": []
        },
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/products/search?q=electronics",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "products", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "electronics"
                }
              ]
            },
            "description": "Search products\nExpected: 200 OK\nResponse: Filtered products"
          },
          "response": []
        },
        {
          "name": "Update Product (Seller)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{seller_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Product Name\",\n  \"price\": 79.99,\n  \"stock\": 40\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/products/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "products", "1"]
            },
            "description": "Update product (seller only)\nNote: Replace {{seller_token}} and 1\nExpected: 200 OK"
          },
          "response": []
        },
        {
          "name": "Delete Product (Seller)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{seller_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/products/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "products", "1"]
            },
            "description": "Delete product (seller only)\nExpected: 204 No Content"
          },
          "response": []
        },
        {
          "name": "Client Cannot Create Product (Should Fail)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{client_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Unauthorized Product\",\n  \"price\": 50.00\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/products",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "products"]
            },
            "description": "Try to create product as client\nExpected: 403 Forbidden"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Media",
      "item": [
        {
          "name": "Upload Media (Valid)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{seller_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "path/to/test/image.jpg"
                }
              ]
            },
            "url": {
              "raw": "http://localhost:8080/api/products/1/media",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "products", "1", "media"]
            },
            "description": "Upload media for product\nSupported: JPG, PNG, MP4 (< 5MB)\nExpected: 201 Created"
          },
          "response": []
        },
        {
          "name": "Upload Invalid File Type (Should Fail)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{seller_token}}"
              }
            ],
            "body": {
